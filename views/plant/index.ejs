<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Plant Directory</title>
  </head>
  <body>
    <h1>Plant Directory</h1>
    <ul>
      <% for (let i = 0; i < plant.length; i++) { %>
        <li>
          <!-- Plant Name/Link to the show.ejs -->
          <button><a href="/plant/<%=plant[i].id%>">
            <%=plant[i].name;%></button>
            </ a>
          <!-- Delete button/method-overrride/POST -->
          <form action="/plant/<%=plant[i].id%>?_method=DELETE" method="POST">
            <button><input type="submit" value="DELETE" /></button>
          </form>
          <!-- Edit button/Link to edit.ejs -->
          <button><a href="/plant/<%=plant[i].id%>/edit">Edit Plant Entry</a></button>
        </li>
      <% } %>
    </ul>
    <nav>
      <button><a href="/plant/new">Add New Plant</a></button>
    </nav>
  </body>
</html>
